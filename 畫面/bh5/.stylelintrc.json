{
  "extends": [
    "stylelint-config-standard"
  ],
  "syntax": "postcss-syntax",
  "plugins": ["stylelint-order"],
  "rules": {
    "selector-class-pattern": null,
    "comment-no-empty": null,
    "max-line-length": [200, {}],
    "order/properties-order": [
      "-webkit-touch-callout",
      "pointer-events",
      "content",
      "cursor",
      "user-select",
      "flex-grow",
      "flex-shrink",
      "position",
      "top",
      "right",
      "bottom",
      "left",
      "z-index",
      "transform",
      "transform-origin",
      "display",
      "flex-direction",
      "justify-content",
      "align-items",
      "float",
      "clear",
      "overflow",
      "overflow-x",
      "overflow-y",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",
      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "box-sizing",
      "width",
      "min-width",
      "max-width",
      "height",
      "min-height",
      "max-height",
      "clip-path",
      "font-size",
      "line-height",
      "font-family",
      "text-align",
      "vertical-align",
      "text-justify",
      "text-indent",
      "text-overflow",
      "text-decoration",
      "letter-spacing",
      "white-space",
      "word-break",
      "-webkit-tap-highlight-color",
      "color",
      "object-fit",
      "background",
      "background-position",
      "background-repeat",
      "background-size",
      "background-color",
      "background-image",
      "background-clip",
      "border",
      "border-top",
      "border-right",
      "border-bottom",
      "border-left",
      "border-style",
      "border-width",
      "border-color",
      "border-top-style",
      "border-top-width",
      "border-top-color",
      "border-right-style",
      "border-right-width",
      "border-right-color",
      "border-bottom-style",
      "border-bottom-width",
      "border-bottom-color",
      "border-left-style",
      "border-left-width",
      "border-left-color",
      "border-radius",
      "opacity",
      "filter",
      "list-style",
      "outline",
      "visibility",
      "box-shadow",
      "text-shadow",
      "resize",
      "transition",
      "animation",
      "animation-name",
      "animation-duration",
      "animation-iteration-count",
      "animation-direction",
      "animation-timing-function"
    ]
  }
}
